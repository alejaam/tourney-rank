# Environment Configuration for TourneyRank

# Database
DATABASE_URL=postgresql://tourneyrank:tourneyrank@localhost:5432/tourneyrank?sslmode=disable

# Redis
REDIS_URL=redis://localhost:6379

# Server Configuration
HTTP_PORT=8080
WS_PORT=8081
ENV=development

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
SESSION_TIMEOUT=24h

# External Services
DISCORD_WEBHOOK_URL=
N8N_WEBHOOK_URL=

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Features
ENABLE_BETTING=true
ENABLE_REGISTRATIONS=true
